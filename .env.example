# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Admin Panel Authentication
# IMPORTANT: Use strong credentials in production!
# Username should be at least 8 characters
# Password should be at least 12 characters with mixed case, numbers, and symbols
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_strong_password_here

# Session Secret (REQUIRED - must be at least 32 characters)
# Generate a secure random secret with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=your_generated_session_secret_here

# DynamoDB Configuration (REQUIRED)
# Note: Using DYNAMODB_ prefix instead of AWS_ to avoid conflicts with AWS Amplify reserved variables
# Region where your DynamoDB tables are located
DYNAMODB_REGION=us-east-1

# IAM User Access Keys - Create in AWS IAM Console
# IMPORTANT: Never commit these to git! Keep them in .env.local only
DYNAMODB_ACCESS_KEY_ID=your_aws_access_key_id_here
DYNAMODB_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# DynamoDB Table Names (Optional - defaults provided)
# Only set these if you used different table names
DYNAMODB_PRODUCTS_TABLE=tecnoexpress-products
DYNAMODB_CAROUSEL_TABLE=tecnoexpress-carousel
DYNAMODB_ACTIVITY_LOG_TABLE=tecnoexpress-activity-log
DYNAMODB_CATEGORIES_TABLE=tecnoexpress-categories
