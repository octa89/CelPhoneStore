# ===========================================
# TecnoExpress Environment Variables
# Copy this file to .env.local and fill in values
# ===========================================

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Base URL (change for production)
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=https://your-production-domain.com

# ===========================================
# Admin Panel Authentication
# ===========================================
# IMPORTANT: Use strong credentials in production!
ADMIN_USERNAME=your_admin_username
ADMIN_PASSWORD=your_strong_password_here

# Session Secret (REQUIRED - must be at least 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
SESSION_SECRET=your_generated_session_secret_here

# ===========================================
# DynamoDB Configuration
# ===========================================
# IMPORTANT: Using DYNAMODB_ prefix instead of AWS_ to avoid conflicts with AWS Amplify
DYNAMODB_REGION=us-east-2
DYNAMODB_ACCESS_KEY_ID=your_aws_access_key_id_here
DYNAMODB_SECRET_ACCESS_KEY=your_aws_secret_access_key_here

# DynamoDB Table Names
DYNAMODB_PRODUCTS_TABLE=tecnoexpress-products
DYNAMODB_CAROUSEL_TABLE=tecnoexpress-carousel
DYNAMODB_ACTIVITY_LOG_TABLE=tecnoexpress-activity-log
DYNAMODB_CATEGORIES_TABLE=tecnoexpress-categories
DYNAMODB_CHAT_CONVERSATIONS_TABLE=tecnoexpress-chat-conversations
DYNAMODB_PRODUCT_INQUIRIES_TABLE=tecnoexpress-product-inquiries
DYNAMODB_POPULAR_MODELS_TABLE=tecnoexpress-popular-models
DYNAMODB_RESERVATIONS_TABLE=tecnoexpress-reservations

# ===========================================
# OpenAI (Chatbot)
# ===========================================
OPENAI_API_KEY=sk-proj-your_openai_api_key_here

# ===========================================
# Email Notifications (Gmail)
# ===========================================
# Setup steps:
# 1. Enable 2FA on your Gmail account
# 2. Go to https://myaccount.google.com/apppasswords
# 3. Generate an App Password for "Mail"
# 4. Use the 16-character password below
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=xxxx xxxx xxxx xxxx
ADMIN_NOTIFICATION_EMAIL=notifications@your-domain.com
